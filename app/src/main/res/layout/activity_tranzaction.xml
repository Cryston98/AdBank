<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tranzaction"
    android:orientation="vertical"
    android:padding="20dp">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="258dp"
        android:layout_height="154dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_below="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginTop="-30dp"
            android:textColor="@color/frontColor1"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Ad"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:layout_below="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginTop="-30dp"
            android:textColor="@color/frontColor2"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Bank"
            android:layout_marginBottom="40dp"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_below="@id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_marginTop="-30dp"
            android:textColor="@color/backColor"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text=" Transfer Money "
            android:layout_marginBottom="40dp"
            />


    </LinearLayout>


    <EditText
        android:id="@+id/uidAppTransfer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="17dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/uid"
        android:paddingLeft="10dp"
        android:ems="10"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"
        android:hint="UID Application" />

    <EditText
        android:id="@+id/uidAccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="17dp"
        android:background="@drawable/custom_input"
        android:drawableLeft="@drawable/idaccount"
        android:paddingLeft="10dp"
        android:ems="10"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:drawablePadding="10dp"
        android:inputType="textPersonName"
        android:hint="UID Account" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/minimTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="@color/backColor"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:text="0"
        />

    <TextView
        android:id="@+id/maximTransfer"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="@color/backColor"
        android:textStyle="bold"
        android:text="120"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        />

</LinearLayout>

    <SeekBar
        android:id="@+id/selectQuantityBar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scrollbarSize="40dp" />

<!--    <view-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="1dp"-->
<!--        android:layout_marginRight="5dp"-->
<!--        android:layout_marginLeft="5dp"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        android:background="#232323"-->
<!--        ></view>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/quantityTransferTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_margin="5dp"
        android:textColor="@color/backColor"
        android:textStyle="bold"
        android:text="Quantity To Transfer  "
        />

    <TextView
        android:id="@+id/quantityTransferValue"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:layout_margin="5dp"
        android:textColor="@color/backColor"
        android:textStyle="bold"
        android:gravity="right"
        android:text="0" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/transferContribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:textColor="@color/backColor"
            android:textStyle="bold"
            android:text="Transaction Price "
            />

        <TextView
            android:id="@+id/TransferValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:layout_margin="5dp"
            android:textColor="@color/backColor"
            android:textStyle="bold"
            android:gravity="right"
            android:text="0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:background="@color/backColor"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/totalQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/backColor"
            android:textStyle="bold"
            android:text="Total "
            />

        <TextView
            android:id="@+id/totalQuantityValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_margin="5dp"
            android:textColor="@color/backColor"
            android:textStyle="bold"
            android:gravity="right"
            android:text="0" />
    </LinearLayout>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/sendRequestTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uidAppTransfer"
        android:layout_marginLeft="5dp"
        android:text="Send Request" />


</LinearLayout>