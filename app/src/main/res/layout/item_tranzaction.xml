<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:background="@drawable/border_popup"
        android:id="@+id/itemLayoutTranzaction">

        <View
            android:id="@+id/statusColorTranzaction"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/frontColor1"
            ></View>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentLeft="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="10dp">



                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/security"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="-2dp"
                    android:layout_toEndOf="@id/icon"
                    android:layout_toRightOf="@id/icon"
                    android:textColor="#232323"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="UID_Application" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginRight="10dp">



                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/username"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/uid_AccountHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginRight="10dp"
                android:layout_toEndOf="@id/icon"
                android:layout_toRightOf="@id/icon"
                android:textColor="#232323"
                android:textSize="13sp"
                tools:text="UID account" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dateRequestTranz"
                    android:layout_marginTop="5dp"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/calendar"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/dateRequestTranzValue"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@id/icon"
                    android:layout_toRightOf="@id/icon"
                    android:textColor="#232323"
                    android:textSize="13sp"
                    tools:text="2020/12/14" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_marginRight="5dp"
                        android:layout_toEndOf="@id/icon"
                        android:layout_toRightOf="@id/icon"
                        android:textColor="#232323"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="Transaction: "></TextView>

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/money"
                        android:layout_alignParentLeft="true" />

                    <TextView
                        android:id="@+id/quantityTransferValueListTranz"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title"
                        android:layout_marginRight="10dp"
                        android:layout_toEndOf="@id/icon"
                        android:layout_toRightOf="@id/icon"
                        android:textColor="#232323"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:text="300"></TextView>
                </LinearLayout>



            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

